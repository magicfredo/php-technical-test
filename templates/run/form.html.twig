{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
    <h1 class="alert-success">Run Form</h1>

    <a href="{{ path('run_index') }}"><< Back</a>

    <div class="container">
    {{ form_start(form) }}

        <div class="form-group row">
            {{ form_label(form.type, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.type) }}
                {{ form_errors(form.type) }}
            </div>
        </div>

        <div class="form-group row">
            {{ form_label(form.startedAt, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.startedAt) }}
                {{ form_errors(form.startedAt) }}
            </div>
        </div>

        <div class="form-group row">
            {{ form_label(form.duration, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.duration) }}
                {{ form_errors(form.duration) }}
            </div>
        </div>

        <div class="form-group row">
            {{ form_label(form.distance, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.distance) }}
                {{ form_errors(form.distance) }}
            </div>
        </div>

        <div class="form-group row">
            {{ form_label(form.comment, null, {'label_attr': {'class': 'col-sm-2 col-form-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.comment) }}
                {{ form_errors(form.comment) }}
            </div>
        </div>

        {{ form_widget(form.submit) }}

    {{ form_end(form) }}
    </div>

{% endblock %}